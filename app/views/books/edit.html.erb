<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <label for>Title</label>
  <%= f.text_field :title %>
  
  <label for>Body</label>
  <%= f.text_area :body %>
  
  <%= f.submit "Update Book" %>
  
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>

<% end %>
